<div class="container">
<h2>
Welcome <%= current_user.email %> !!
<%= link_to 'LogOut', destroy_user_session_path, :method => :delete %>
</h2>

<h3>
<%= link_to 'Home', home_path, method: :get %>
<%= link_to 'All Post', articles_path %>
<%= link_to 'New Post', new_article_path, :remote => true %> 
</h3>
 
 <h2>Listing articles</h2>
<table class="table table-bordered">
 <thead>
  <tr>
    <th>User Id</th>
    <th>Article Id</th>
    <th>Title</th>
    <th>Text</th>
    <th>Post Type</th>
  </tr>
 </thead>
 <tbody>
  <% @articles.each do |article| %>
    <tr class = 'tid', id = "tid-<%=article.id%>" >
      <td><%= article.user_id %></td>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.post_type %></td>
      
      <td><%= link_to 'Show', article_path(article), :remote => true %></td>
      <td><%= link_to 'Edit', edit_article_path(article), :remote => true %></td>
      <td><%= link_to 'Destroy', delete_path(article),
              method: :get,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
  </tbody>
</table>
</div>