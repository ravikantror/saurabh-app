<h1>New Article</h1>

<%= form_for :article, :url => {'action' => 'create'} do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :post_type %>
    <%= f.select :post_type, [['Friends','Friends'],['Only Me','Only Me'],['Public','Public']] %>
 </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>